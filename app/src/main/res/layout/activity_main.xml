<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textRollResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll Result: " />

        <Spinner
            android:id="@+id/spinnerDie"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnRollOnce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll Once" />

            <Button
                android:id="@+id/btnRollTwice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Roll Twice" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <EditText
                android:id="@+id/inputNumOfSides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="Number of sides of die to be added"
                android:hint="Number of sides"
                android:inputType="number" />

            <Button
                android:id="@+id/btnAddNewDie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Add New Die" />

        </LinearLayout>

        <TextView
            android:id="@+id/textHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="History: " />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>