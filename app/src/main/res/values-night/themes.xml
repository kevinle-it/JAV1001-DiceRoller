<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiceRoller" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Modify default Toolbar Style on Application level. -->
        <item name="toolbarStyle">@style/Theme.DiceRoller.Toolbar</item>
        <!-- Apply Spinner Style on Application level. -->
        <item name="android:spinnerItemStyle">@style/Theme.DiceRoller.SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/Theme.DiceRoller.SpinnerDropDownItem</item>
        <!-- Apply Button Style on Application level. -->
        <item name="materialButtonStyle">@style/Theme.DiceRoller.Button</item>
    </style>

    <!-- Style for Toolbar/ActioBar. -->
    <style name="Theme.DiceRoller.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/purple_200</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <!-- Style for Text Views. -->
    <style name="Theme.DiceRoller.TextView">
        <item name="android:textSize">@dimen/text_view_text_size</item>
        <item name="android:textColor">@color/light_green_a400</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Style for Spinners. -->
    <style name="Theme.DiceRoller.SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/spinner_text_size</item>
    </style>
    <style name="Theme.DiceRoller.SpinnerDropDownItem" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:textSize">@dimen/spinner_text_size</item>
    </style>

    <!-- Style for Buttons. -->
    <style name="Theme.DiceRoller.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/amber_a400</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/pink_500</item>
    </style>
</resources>